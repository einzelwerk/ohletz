extends ../layouts/main

block vars
  - const title = 'Home';
  - const pageName = 'home-page';

block content
  - const heroTitle = 'Karriere'
  - const heroDesc = 'Wir suchen engagierte und leidenschaftliche Rechtsanwälte/-innen mit unterschiedlichen Spezialisierungen und Qualifikationen - sowohl erfahrene Profis als auch motivierte Einsteiger/-innen.'
  - const heroImage = '@/assets/img/hero/7.jpg'
  include ../components/hero
  section.section.container
    .section-heading 
      h2.section-heading__title Warum bei Ohletz arbeiten?
    .career-features.swiper.js-career-features-slider 
      .swiper-wrapper 
        .career-features__item.swiper-slide
          h3.career-features__title Entwicklungsmöglichkeiten
          p.career-features__desc Interne Schulungen und Unterstützung bei externen Fortbildungen bieten Karrieremöglichkeiten.
        .career-features__item.swiper-slide
